{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}
{% block body %}
  <p id="centrado"><img id="imgPrincipal" src="{{ asset('imagenes/titulo.png') }}" alt="foto"></p>
  <p id="link"><a href="{{ asset('/api/rutas') }}" class="button">API</a></p>
  <p id="link"><a href="{{ asset('/informacion') }}" class="button">Informaci√≥n</a></p>
  <article id='contenedor'>
    <table>
      {% for ruta in rutas %}
        <fieldset>
          <div class='ruta'>
            <img id="imgInicio" src="{{ asset('imagenes/' ~ ruta.imagen) }}" alt="{{ ruta.nombre }}">
